<!-- MyDialog.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
xmlns:table="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
>
    <VBox >
    <form:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
        width="100%"
        title="Simple Employee Form">

        <form:content>
            <Label text="Name" />
            <Input value="{/name}" />

            <Label text="Email" />
            <Input value="{/email}" />

            <Label text="Department" />
            <Input value="{/department}" />

            <Label text="Hire Date" />
            <DatePicker value="{/hireDate}" />

            <Button
                text="Save"
                type="Emphasized"
                press="onSaveSimpleForm" />
        </form:content>
    </form:SimpleForm>

    </VBox>
</core:FragmentDefinition>
