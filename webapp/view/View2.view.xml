<mvc:View xmlns:filterbar="sap.ui.comp.filterbar" xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    controllerName="com.trail.ui5trail.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
>
    <f:DynamicPage
        id="page2"
        class="page1style"
        backgroundDesign="Transparent"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text=" EMPLOYEES DATA...." />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="true"
                backgroundDesign="Transparent"
                
            >
                    <l:VerticalLayout>
                        <ObjectAttribute
                            title="Company"
                            text="CY Techies"
                        />
                        <ObjectAttribute
                            title="Branches"
                            text="India,Netherlands"
                        />
                        <ObjectAttribute
                            title="Founder"
                            text="Harish Yerra"
                        />
                    </l:VerticalLayout>
                    <ToolbarSpacer ></ToolbarSpacer>
                    <l:VerticalLayout>
                        <ObjectAttribute title="Domain" text="SAP BTP"/>
                    </l:VerticalLayout>
                                    <ToolbarSpacer ></ToolbarSpacer>
                <SearchField liveChange="onSearch"></SearchField>
                <ComboBox id="searchfilter" items="{path:'/Employees'}"> 
                <core:Item key="{ID}" text="{FirstName}"></core:Item>
                </ComboBox>
                <Button icon="sap-icon://employee-lookup" press="onSearch"></Button>
                <filterbar:FilterBar search="onSearch"></filterbar:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
            id="employeetable"
                items="{path:'/Employees'}"
                headerText="Employees ({= ${Employees}.length })"
                
                growing="true"
                growingThreshold="10"
                mode="SingleSelectMaster"
                selectionChange="onemployeeselection"
            >
                <columns >
                    <Column>
                        <Text text="EmployeeID" />
                    </Column>
                    <Column>
                        <Text text="Full Name" />
                    </Column>
                    <Column
                        demandPopin="true"
                        minScreenWidth="Tablet"
                    >
                        <Text text="BirthDate" />
                    </Column>
                    <Column
                        demandPopin="true"
                        minScreenWidth="Tablet"
                    >
                        <Text text="Address" />
                    </Column>
                    <Column>
                        <Text text="Department" />
                    </Column>
                    <Column
                        demandPopin="true"
                        minScreenWidth="Tablet"
                    >
                        <Text text="HireDate" />
                    </Column>
                </columns>
                <items >
                    <ColumnListItem type="Navigation" press="onnavtoemp">
                        <cells >
                            <Text text="{ID}" />
                            <Text
                                text="{=${Title}+' . '+${LastName}+' '+${FirstName}}"
                            />
                            <Text text="{BirthDate}" />
                            <Text
                                text="{parts:[{path:'Address'},{path:'City'},{path:'Country'}], formatter:'.formatAddress'}"
                            />
                            <Text text="{Department}" />
                            <Text text="{HireDate}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        <f:footer><Bar><contentRight>
        <Button
                        icon="sap-icon://add-employee"
                        type="Emphasized"
                        press="onAddemployee"
                    />
                    </contentRight>
        </Bar></f:footer>
    </f:DynamicPage>
</mvc:View>
